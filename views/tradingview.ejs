<!-- Content -->
<div class="p-4">
    <div class="max-w-[1800px] mx-auto">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-2xl font-semibold">Trading View</h1>
            <nav class="text-sm text-gray-500">
                <a href="/" class="text-blue-600 hover:underline">Dashboard</a> / Tradingview
            </nav>
        </div>

        <div class="flex gap-4">
            <div class="flex-1">
                <div id="tradingview" style="width: 100%; height: 600px"></div>
            </div>
            <div class="flex-1">
                <div id="tradingview_2" style="width: 100%; height: 600px"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>

<script type="text/javascript">
    new TradingView.widget({
        "autosize": true,
        "symbol": "<%= symbol %>",
        "interval": "15",
        "theme": "Light",
        "style": "1",
        "locale": "en",
        "toolbar_bg": "#f1f3f6",
        "enable_publishing": false,
        "allow_symbol_change": true,
        "container_id": "tradingview",
        "timezone": Intl.DateTimeFormat().resolvedOptions().timeZone,
        "studies": [
            "BB@tv-basicstudies",
            "CCI@tv-basicstudies",
            "MACD@tv-basicstudies",
            "MAExp@tv-basicstudies",
            "RSI@tv-basicstudies",
            "StochasticRSI@tv-basicstudies"
        ]
    });

    new TradingView.widget({
        "autosize": true,
        "symbol": "<%= symbol %>",
        "interval": "60",
        "theme": "Light",
        "style": "1",
        "locale": "en",
        "toolbar_bg": "#f1f3f6",
        "enable_publishing": false,
        "allow_symbol_change": true,
        "container_id": "tradingview_2",
        "timezone": Intl.DateTimeFormat().resolvedOptions().timeZone,
        "studies": [
            "BB@tv-basicstudies",
            "CCI@tv-basicstudies",
            "MACD@tv-basicstudies",
            "MAExp@tv-basicstudies",
            "RSI@tv-basicstudies",
            "StochasticRSI@tv-basicstudies"
        ]
    });
</script>
