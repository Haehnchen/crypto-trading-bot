<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-sm table-hover backtest-table">
            <tr>
                <td>
                    Initial Capital
                </td>
                <td>
                    {{ summary.initialCapital }} $
                </td>
            </tr>
            <tr>
                <td>
                    Final Capital
                </td>
                <td>
                    {{ summary.finalCapital }} $
                </td>
            </tr>
            <tr>
                <td>
                    Net Fees
                </td>
                <td>
                    {{ summary.netFees|round(2) }} $
                </td>
            </tr>
            <tr>
                <td>
                    Net Return on Investment
                </td>
                <td class="{{ summary.netProfit > 0 ? 'text-success' : 'text-danger' }}">
                    {{ summary.netProfit }} %
                </td>
            </tr>
            <tr>
                <td>
                    Net Return on Long transactions
                </td>
                <td class="{{ summary.cumulativePnlLongs > 0 ? 'text-success' : 'text-danger' }}">
                    {{ summary.cumulativePnlLongs }} $
                </td>
            </tr>
            <tr>
                <td>
                    Net Return on Short transactions
                </td>
                <td class="{{ summary.cumulativePnlShorts > 0 ? 'text-success' : 'text-danger' }}">
                    {{ summary.cumulativePnlShorts }} $
                </td>
            </tr>
        </table>
    </div>

    <div class="col-md-6">
        <table class="table table-bordered table-sm table-hover backtest-table">
            <tr>
                <td>
                    Sharpe Ratio
                </td>
                <td>
                    {{ summary.sharpeRatio }}
                </td>
            </tr>
            <tr>
                <td>
                    Average Return Per Trade
                </td>
                <td class="{{ summary.averagePNLPercent > 0 ? 'text-success' : 'text-danger' }}">
                    {{ summary.averagePNLPercent }} %
                </td>
            </tr>
            <tr>
                <td>
                    Total Number of Trades
                </td>
                <td>
                    {{ summary.trades.total }}
                </td>
            </tr>
            <tr>
                <td>
                    Number of Winning Trades
                </td>
                <td>
                    {{ summary.trades.profitableCount }}
                </td>
            </tr>
            <tr>
                <td>
                    Percentage of Winning Trades
                </td>
                <td>
                    {{ summary.trades.profitabilityPercent }}
                </td>
            </tr>
        </table>
    </div>
</div>
